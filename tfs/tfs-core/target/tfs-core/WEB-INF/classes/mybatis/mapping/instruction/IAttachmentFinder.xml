<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ucpb.tfs.application.query.instruction.IAttachmentFinder">

    <select id="findAllAttachments" resultType="hashMap">
        select * from Attachment
    </select>


    <select id="findAttachmentsOfEts" resultType="hashMap">
        select * from Attachment a where a.AttachmentId = #{serviceInstructionId}
    </select>

    <select id="findAttachmentsOfTradeService" resultType="hashMap">
        select * from Attachment a where a.AttachmentId = #{tradeServiceId}
    </select>


</mapper>
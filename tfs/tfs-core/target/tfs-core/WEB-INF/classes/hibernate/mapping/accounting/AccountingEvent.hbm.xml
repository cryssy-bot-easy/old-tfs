<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-
        //Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping auto-import="false" default-access="field">

    <class name="com.ucpb.tfs.domain.accounting.AccountingEvent" table="RefAccEvent">

        <composite-id name="accountingEventId" access="field">
            <key-property name="accountingEventId" column="accEvId" type="string" length="100"/>
        </composite-id>

        <component name="productId" class="com.ucpb.tfs.domain.reference.ProductId" access="field">
            <property name="productId" column="productId" type="string" />
        </component>

        <property name="serviceType" column="serviceType">
            <type name="org.hibernate.type.EnumType">
                <param name="type">12</param>
                <param name="enumClass">com.ucpb.tfs.domain.service.enumTypes.ServiceType</param>
            </type>
        </property>

        <component name="accountingEventTransactionId" class="com.ucpb.tfs.domain.accounting.AccountingEventTransactionId" access="field">
            <property name="accountingEventTransactionId" column="accEvTranId" type="string" length="100"/>
        </component>

        <property name="currencySettlement" column="currencySettlement" type="string" />
        <property name="currencyOriginal" column="currencyOriginal" type="string" />

    </class>

</hibernate-mapping>

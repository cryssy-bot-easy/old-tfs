<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-
        //Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping auto-import="false" default-access="field">

    <class name="com.ucpb.tfs.domain.letter.TransmittalLetter" table="TransmittalLetter" abstract="true">

        <id name="id" column="id" length="36">
            <generator class="org.hibernate.id.UUIDHexGenerator"/>
        </id>

        <component name="transmittalLetterCode" class="com.ucpb.tfs.domain.letter.TransmittalLetterCode" access="field">
            <property name="transmittalLetterCode" column="transmittalLetterCode" type="string" length="10"/>
        </component>

        <property name="letterDescription" column="letterDescription" type="org.hibernate.type.MaterializedClobType" length="3000"/>

        <property name="letterType">
            <column name="letterType" length="7"/>
            <type name="org.hibernate.type.EnumType">
                <param name="type">12</param>
                <param name="enumClass">com.ucpb.tfs.domain.letter.enumTypes.LetterType</param>
            </type>
        </property>

        <property name="originalCopy" column="originalCopy" type="java.lang.String" length="50"/>

        <property name="duplicateCopy" column="duplicateCopy" type="java.lang.String" length="50"/>

        <property name="sequenceNumber" column="sequenceNumber" type="integer" />

    </class>

</hibernate-mapping>
